<UserControl x:Class="WpfApp1.Controls.ChatHistory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Controls"
             mc:Ignorable="d" 
             Background="{DynamicResource ApplicationBackgroundBrush}"
             Foreground="{DynamicResource TextFillColorPrimaryBrush}"
             Width="300" Height="800"
              xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Button x:Name="btnBack" 
                    Grid.Column="0"
                    Margin="10,0,0,0"
                    Click="BtnBack_Click">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="ArrowLeft24"/>
                    <TextBlock Text="返回" 
                              Margin="5,0,0,0"/>
                </StackPanel>
            </Button>

            <TextBlock Text="历史记录" 
                       Grid.Column="1"
                       FontSize="20" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Grid>

        <!-- 批量操作工具栏 -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    Margin="10,5">
            <CheckBox x:Name="SelectAllCheckBox" 
                      Content="全选" 
                      Margin="5,0"
                      Checked="SelectAll_Checked"
                      Unchecked="SelectAll_Unchecked"/>
            <Button Content="批量删除" 
                    Margin="5,0"
                    Click="BatchDelete_Click"/>
        </StackPanel>

        <ListView x:Name="HistoryList" 
                  Grid.Row="2" 
                  Margin="10"
                  SelectionMode="Multiple"
                  SelectionChanged="HistoryList_SelectionChanged" Background="{x:Null}" BorderBrush="{x:Null}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                  Margin="0,0,5,0"/>
                        <Button Grid.Column="1" 
                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                Click="OpenHistory_Click"
                                HorizontalContentAlignment="Stretch"
                                Padding="0">
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding Title}" 
                                         FontWeight="Bold"
                                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <TextBlock Text="{Binding Timestamp, StringFormat=yyyy-MM-dd HH:mm:ss}" 
                                         FontSize="12" 
                                         Foreground="Gray"/>
                            </StackPanel>
                        </Button>
                        <Button Grid.Column="2"
                                Content="删除"
                                Click="DeleteHistory_Click"
                                Margin="5,0,0,0"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
